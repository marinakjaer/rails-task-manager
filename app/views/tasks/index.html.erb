<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <div class="items">
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <li><%= link_to task.title, task_path(task) %></li>
  </div>
  <% end %>
</ul>

<hr>
<div class="add-task">
  <i class="fas fa-plus"></i>
  <p>Add new task</p>
</div>
<hr>
