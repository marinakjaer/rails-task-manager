<h1><%= @task.title %></h1>

<div class="description">
  <p><%= @task.details %></p>
</div>

<div class="checkbox">
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
  <p>This task is <%= @task.completed ? "completed" : "not completed yet"%></p>
</div>

<%= link_to "Back to list", tasks_path %>
